{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "exclude": ["dist"]
}
