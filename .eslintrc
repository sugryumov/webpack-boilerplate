{
  "env": {
    "browser": true,
    "es6": true
  },

  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },

  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.common.js"
      }
    }
  },

  "rules": {
    "no-var": 1,
    "camelcase": 1,
    "no-nested-ternary": 1,
    "no-console": 1,
    "no-self-compare": 1,
    "arrow-body-style": 1
  }
}
